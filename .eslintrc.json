{
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "globals": {
      "ComponentFramework": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@microsoft/power-apps",
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-undef" : "warn" // prevent EventListenerOrEventListenerObject is not defined
      // https://powerusers.microsoft.com/t5/Power-Apps-Pro-Dev-ISV/PCF-Component-Tutorial-issue/td-p/1907421
    }
}
